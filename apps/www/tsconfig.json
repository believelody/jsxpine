{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"lib": ["ESNext", "DOM"],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"strict": true,
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"types": ["bun-types", "typed-html", "typed-htmx"],
		"baseUrl": ".",
		"rootDir": ".",
		"paths": {
			"$common": ["src/common"],
			"$common/*": ["src/common/*"],
			"$config": ["src/config"],
			"$config/*": ["src/config/*"],
			"$components": ["src/components"],
			"$components/*": ["src/components/*"],
			"$middlewares": ["src/middlewares"],
			"$middlewares/*": ["src/middlewares/*"],
			"$controllers": ["src/controllers"],
			"$controllers/*": ["src/controllers/*"],
			"$registry": ["src/registry"],
			"$registry/*": ["src/registry/*"],
			"$services": ["src/services"],
			"$services/*": ["src/services/*"],
			"$pages": ["src/pages"],
			"$pages/*": ["src/pages/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$views": ["src/views"],
			"$views/*": ["src/views/*"],
		}
	},
	"exclude": ["public", "node_modules", "src/script"]
}
